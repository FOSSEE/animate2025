---
import Main from '../layouts/main.astro';

const workshop = {
  topic: "Workshop on Submission Preparation & Synfig Studio Demo",
  time: "30 July 2025, 3-4 PM",
  zoom: {
    url: "https://zoom.us/j/96921483124?pwd=tsJ8FcCF9WPfTaeDfxKTMs00FJomp4.1",
    meetingId: "969 2148 3124",
    passcode: "790565",
  },
  youtube: {
    url: "https://www.youtube.com/c/studioiitbombay/live",
  },
};
---

<Main>
  <section class="px-6 py-10 text-black font-[Montserrat] [&_h1]:text-4xl [&_h2]:text-2xl [&_p]:text-xl">
    <h1 class="mb-6 border-[#1f2937] pb-2">
      {workshop.topic}
    </h1>

    <p class="mb-4"><strong>Time:</strong> {workshop.time}</p>

    <h2 class="mb-1">Join Zoom Meeting</h2>
    <p>
      <a href={workshop.zoom.url} class="text-purple-600 underline" target="_blank" rel="noopener noreferrer">
        Click here to join Zoom
      </a>
    </p>
    <p><strong>Meeting ID:</strong> {workshop.zoom.meetingId}</p>
    <p><strong>Passcode:</strong> {workshop.zoom.passcode}</p>

    <h2 class="mt-6 mb-1 font-bold">YouTube Live Streaming</h2>
    <p>
      <a href={workshop.youtube.url} class="text-purple-600 underline" target="_blank" rel="noopener noreferrer">
        Watch on YouTube Live
      </a>
    </p>
  </section>
</Main>

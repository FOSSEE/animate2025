---
import Main from '../layouts/main.astro';
import workshopimage from '../images/thumbnail_400x280.jpeg';

const workshop = {
  topic: "Workshop on Submission Preparation & Synfig Studio Demo",
  date: "30 July, 2025",
  time: "3:00 â€“ 4:00 PM",
  video: {
    url: "https://static.fossee.in/focal/ANIMATE2025/Workshop/Workshop%20on%20Submission%20Preparation%20%26%20Synfig%20Studio%20Demo%2030-07-2025.mp4",
  },
};
---
<Main>
  <div class="flex flex-col items-center py-8">
    <!-- Title -->
    <h1 class="text-2xl md:text-3xl font-Semibold  font-[Montserrat], sans-serifmb-4 text-center">
      {workshop.topic}
    </h1>

    <!-- Thumbnail with link and play icon -->
    <div class="relative inline-block">
      <a href={workshop.video.url} target="_blank" rel="noopener noreferrer">
        <img 
          src={workshopimage.src}
          alt={workshop.topic}
          width="400"
          height="280"
          class="rounded-lg shadow-md"
        />

        <!-- Play button overlay -->
        <span class="absolute inset-0 flex items-center justify-center">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-16 h-16 text-red-600"
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path d="M8 5v14l11-7z" />
          </svg>
        </span>
      </a>
    </div>

    <!-- "Click on thumbnail to play" -->
    <p class="text-red-600 text-sm mt-2">Click on thumbnail to play</p>

    <!-- Date and Time -->
    <p class="mt-4 text-lg">
      <strong>Date:</strong> {workshop.date} &nbsp; <strong>Time:</strong> {workshop.time}
    </p>

    <!-- Horizontal line -->
    <hr class="w-full max-w-md mt-6 border-gray-400" />
  </div>
</Main>
